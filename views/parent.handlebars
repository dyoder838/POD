    <div class="row">
        <div class="col s12">
            <h2>PODS</h2>
        </div>
    </div>
    <div class="row">
        <section class="col s12 m4 l3">
            <div class="row">
                <div class="col s12">
                    <form id="createStudentForm">
                        <div class="row">
                            <div class="col s12">
                                <input type="text" id="studentFirst" placeholder="First Name">
                                <input type="text" id="studentLast" placeholder="Last Name">
                                <input type="text" id="StudentId" placeholder="POD ID">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s12">
                                <input class="btn" type="submit" value="Add Student">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    {{#if parent}}
                    <h5>Students</h5>
                    <ul class="thinn">
                    {{#each parent}}
                        {{#if Students}}
                            {{#each Students}}
                            <li>{{first_name}} {{last_name}}</li>
                            {{/each}}
                        {{/if}}
                    {{/each}}
                    </ul>
                    {{/if}}
                </div>
            </div>
        </section>
        <section class="col s12 m12 l9">
            <div class="row">
                {{#each parent}}
                <div class="col s12 m6 l6">
                    <div class="card blue-grey darken-1">
                        <div class="card-content white-text">
                            <span class="card-title">POD {{this.ParentId}} - {{this.Parent.first_name}}
                                {{this.Parent.last_name}}</span>
                            <h5>Availability</h5>
                            <ul> 
                                
                                {{#if this.Parent.monday}}
                                <li>
                                    Monday
                                </li>
                                {{/if}}
                                {{#if this.Parent.tuesday}}
                                <li>
                                    Tuesday
                                </li>
                                {{/if}}
                                {{#if this.Parent.wednesday}}
                                <li>
                                    Wednesday
                                </li>
                                {{/if}}
                                {{#if this.Parent.thursday}}
                                <li>
                                    Thursday
                                </li>
                                {{/if}}
                                {{#if this.Parent.friday}}
                                <li>
                                    Friday
                                </li>
                                {{/if}}
                            </ul>
                            <h5>Students</h5>
                            <ul>
                                {{#each this.Students}}
                                <li>{{this.first_name}} {{this.last_name}}</li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </section>
    </div>
