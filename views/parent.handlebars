    <div class="row">
        <div class="col s12">
            <h2>PODS</h2>
        </div>
    </div>
    <div class="row">
        <section class="col s12 m4 l3">
            <div class="row">
                <div class="col s12">
                    <h5>Students</h5>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <form id="createStudentForm">
                        <div class="row">
                            <div class="col s12">
                                <input type="text" id="studentFirst" placeholder="First Name">
                                <input type="text" id="studentLast" placeholder="Last Name">
                                <input type="text" id="StudentId" placeholder="POD ID">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s12">
                                <input class="btn" type="submit" value="Add Student">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
        <section class="col s12 m12 l9">
            <div class="row">
                <div class="col s12">

                    <div class="row">
                        <div class="col s12">
                            {{#each parent}}
                            <div class="card">
                                <div class="card-content">
                                    <h4 class="podParent"><span>{{Parent.id}} -</span> {{Parent.first_name}} {{Parent.last_name}}</h4>
                                    <ul>
                                        <li>Monday: {{Parent.monday}}</li>
                                        <li>Tuesday: {{Parent.tuesday}}</li>
                                        <li>Wednesday: {{Parent.wednesday}}</li>
                                        <li>Thursday: {{Parent.thursday}}</li>
                                        <li>Friday: {{Parent.friday}}</li>
                                    </ul>
                                    {{#if Students}}
                                    <h5>Students</h5>
                                    {{/if}}
                                    <ul>
                                        {{#each Students}}
                                        <li>{{first_name}} {{last_name}}</li>
                                        {{/each}}
                                    </ul>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
