    <div class="row">
        <div class="col s12">
            <h2>Parent</h2>
            <p class="flow-text">Pods associated with your classroom</p>
        </div>
    </div>
    <div class="row">
        <section class="col s12 m4 l3">
            <div class="row">
                <div class="col s12">
                    <h5>Students</h5>
                </div>
            </div>
            <div class="row">
                <div class="col s12">
                    <form id="createStudentForm">
                        <div class="row">
                            <div class="col s12">
                                <input type="text" id="studentFirst" placeholder="First Name">
                                <input type="text" id="studentLast" placeholder="Last Name">
                                <input type="text" id="StudentId" placeholder="POD ID">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s12">
                                <input class="btn" type="submit" value="Add Student">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
        <section class="col s12 m12 l9">
            <div class="row">
                {{#each parent}}
                <div class="col s12">
                    <div class="card">
                        <div class="card-content">
                            <h3>
                                <span class="thiqq">{{Parent.id}}</span>
                                 {{Parent.first_name}} {{Parent.last_name}}
                            </h3>
                            <ul>
                                <li>Monday: {{Parent.monday}}</li>
                                <li>Tuesday: {{Parent.tuesday}}</li>
                                <li>Wednesday: {{Parent.wednesday}}</li>
                                <li>Thursday: {{Parent.thursday}}</li>
                                <li>Friday: {{Parent.friday}}</li>
                            </ul>
                            {{#if Students}}
                            <h4>Students</h4>
                            <ul class="thinn">
                                {{#each Students}}
                                <li>{{first_name}} {{last_name}}</li>
                                {{/each}}
                            </ul>
                            {{/if}}
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </section>
    </div>
