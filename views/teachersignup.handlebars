<main class="container">

    <section id="teacher-section-row" class="row">

        <article class="col xl12">

            <form class="row">

                <div class="input-field col xl3">

                    <input id="teacherFirst" type="text" class="validate">
                    <label for="teacherFirst">First Name</label>
                    <span class="helper-text" data-error="wrong" data-success="right"></span>

                </div>

                <div class="input-field col xl3">

                    <input id="teacherLast" type="text" class="validate">
                    <label for="teacherLast">Last Name</label>
                    <span class="helper-text" data-error="wrong" data-success="right"></span>

                </div>

                <div class="input-field col xl3">

                    <input id="teacherEmail" type="email" class="validate">
                    <label for="teacherEmail">Email</label>
                    <span class="helper-text" data-error="wrong" data-success="right"></span>

                </div>

                <div class="input-field col xl3">

                    <input id="teacherPassword" type="password" class="validate">
                    <label for="teacherPassword">Password</label>
                    <span class="helper-text" data-error="wrong" data-success="right"></span>

                </div>

            </form>

        </article>

    </section>

     {{!-- submit button --}}
    <section class="row">

        <article class="col xl12">

            <button id="teacher-submit-button" class="btn waves-effect waves-light" type="submit" name="action">Submit
            </button>

        </article>

    </section>

</main>