<main class="container">
    {{!-- welcome header --}}
    <header class="row">

        <article class="col xl12">

            <h3>Welcome Teacher</h3>
            <h5>Here is a list of active pods associated with your classroom</h5>

        </article>

    </header>

    {{!-- pod view --}}
    <section class="row">

        <article class="col xl4">

            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">{{first_name, last_name}}</span>
                    <ul>
                       
                        <li>
                            <p>Days: {{ if day = true }}</p>
                            <p>Students enrolled {{ no data }}</p>
                        </li>
                        
                    </ul>

                </div>
            </div>

        </article>

        <article class="col xl4">

            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">Card Title</span>
                    <p></p>
                </div>
            </div>

        </article>

        <article class="col xl4">

            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">Card Title</span>
                    <p></p>
                </div>
            </div>

        </article>


    </section>

</main>